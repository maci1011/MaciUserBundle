
{% extends "@FOSUser/layout.html.twig" %}


{% block pathBar %}
<nav class="breadcrumb-wrapper" aria-label="breadcrumb">
<ol class="breadcrumb">

    <li class="breadcrumb-item">
    	<a href="{{ path('fos_user_profile_show') }}">Profile</a>
    </li>

    <li class="breadcrumb-item active">
    	<a href="{{ path('maci_user_delete_account') }}">{{ 'profile.show.delete_account'|matra('Delete Account') }}</a>
    </li>

</ol>
</nav>
{% endblock %}


{% block fos_user_content %}

<div class="container-fluid">

	<h3>{{ 'profile.show.delete_account'|matra('Delete Account') }}</h3>

    <p>
        {{ 'profile.show.delete_account_message'|matra('If you Delete your Account, you will no longer be able to use it for login.') }}
    </p>

    <a class="btn btn-danger" href="{{ path('maci_user_delete_account_confirm') }}">
        {{ 'profile.show.delete_account'|matra('Delete Account') }}
    </a>

</div>

{% endblock %}
